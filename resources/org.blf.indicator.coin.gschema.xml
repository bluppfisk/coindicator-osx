<schemalist>

  <schema id="org.blf.indicator.coin" path="/org/blf/coindicator/">

    <key type="i" name="refresh">
        <range min="5" max="120"/>
        <default>30</default>
        <summary>Refresh interval</summary>
    </key>

    <key type="s" name="exchange">
        <default>'bitstamp'</default>
        <summary>Crypto currency exchange</summary>
    </key>

    <key type="s" name="assetpair-kraken">
        <default>'XXBTZUSD'</default>
        <summary>Kraken asset pairs</summary>
    </key>

  </schema>
</schemalist>
